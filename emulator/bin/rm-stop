#!/bin/bash
case "$1" in
-w | --wait)
  if rm-is-running; then
    rm-exec poweroff
    rm-serial >/dev/null
    rm-wait-stop
    rm-stop-ssh
    rm-stop-serial
  fi
  ;;
"")
  rm-stop --wait &
  disown %-
  ;;
--help)
  echo "Usage: rm-stop [--help|-w|--wait]"
  ;;
*)
  "$0" --help
  exit 1
  ;;
esac
