#!/bin/sh
set -e
if [ $# -ne 0 ];then
  echo "Usage: rm-guestfish <<EOF" >/dev/stderr
  echo "  ln-s /dev/null /etc/systemd/system/xochitl.service" >/dev/stderr
  echo "EOF" >/dev/stderr
  exit 1
fi
if rm-is-running;then
  echo "Error: rm is running" >/dev/stderr
  exit 1
fi
exec cat <<'EOF' - | guestfish --rw --blocksize=512 --add /rootfs.qcow2
  run
  mount /dev/sda2 /
  mount /dev/sda3 /mnt
  mount /dev/sda4 /home
EOF
