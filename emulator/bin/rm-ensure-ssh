#!/bin/sh
if ! [ -f ~/.ssh/id_rsa ]; then
  ssh-keygen -q \
    -f "$HOME/.ssh/id_rsa" \
    -N ''
fi
guestfish --rw --blocksize=512 --add /data/rootfs.qcow2 <<EOF
  run
  mount /dev/sda4 /
  mkdir-p /root/.ssh
  chmod 0700 /root/.ssh
  upload $HOME/.ssh/id_rsa.pub /root/.ssh/authorized_keys
  chmod 0600 /root/.ssh/authorized_keys
EOF
