#!/bin/sh
STATEDIR=${STATEDIR:-/run/rm}
if [ ! -f "${STATEDIR}/rootfs.qcow2" ]; then
  echo "${STATEDIR}/rootfs.qcow2 not found" >/dev/stderr
  exit 1
fi
if [ ! -f "$(readlink "${STATEDIR}/rootfs.qcow2")" ]; then
  echo "${STATEDIR}/rootfs.qcow2 is invalid" >/dev/stderr
  exit 1
fi
exec readlink -f "${STATEDIR}/rootfs.qcow2"
