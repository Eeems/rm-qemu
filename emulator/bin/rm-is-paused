#!/bin/sh
if [ $# -eq 1 ]; then
  case "$1" in
  "--help")
    echo "Usage: $0 [--verbose|--help]"
    exit
    ;;
  "--verbose")
    if rm-is-paused; then
      echo "rm is paused"
      exit
    else
      echo "rm is not paused"
      exit 1
    fi
    ;;
  *)
    rm-is-paused --help
    exit 1
    ;;
  esac
elif [ $# -gt 1 ]; then
  rm-is-paused --help
  exit 1
fi
set -e
if rm-is-running; then
  exit 1
fi
rm-has-snapshot running
