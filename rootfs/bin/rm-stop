#!/bin/bash
case "$1" in
-w | --wait)
  if rm-is-running;then
    rm-exec poweroff
    rm-serial >/dev/null
    while rm-is-running;do
      sleep 1
    done
  fi
  ;;
"")
  if rm-is-running;then
    rm-exec poweroff
  fi
  ;;
--help)
  echo "Usage: rm-start [-D|--detached]"
  ;;
*)
  "$0" --help
  exit 1
  ;;
esac
